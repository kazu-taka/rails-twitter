<div class="row">
  <div class="col-sm-12">
    <h2  class="text-center mar_b_50">ログインする</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email ,class: "control-label col-sm-offset-1 col-sm-2" %>
        <div class="col-sm-9 mar_b_50">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password ,class: "control-label col-sm-offset-1 col-sm-2" %>
        <div class="col-sm-9 mar_b_50">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="actions">
          <%= f.submit "ログイン",class: "col-sm-offset-3 btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

